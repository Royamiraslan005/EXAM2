@using Greenhost.Models
@model List<Member>
@{
    int count = 0;
}
<div class="container">
    <h1>Members</h1>
    <a asp-action="Create" class="btn btn-submit" >Create</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Fullname</th>
                <th scope="col">Designation</th>
                <th scope="col">Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.Id</td>
                    <td>@item.Fullname</td>
                    <td>@item.Designation</td>
                    <td>@item.formFile</td>
                    <td><img width="100" src="~/images/@item.ImgUrl" /></td>
                    <td><a asp-action="Delete" class="btn btn-dark" asp-route-id="@item.Id">Delete</a></td>
                    <td><a asp-action="Update" class="btn btn-danger" asp-route-id="@item.Id">Update</a></td>
                 
                </tr>
            }
        </tbody>
    </table>
</div>

